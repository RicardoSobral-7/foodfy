{% extends "admin/layoutAdmin.njk" %}

{% block styles %}
<link rel="stylesheet" href="/styles/admin/chefs.css">
{% endblock styles %}

{% block main %}
    <h3>Gerenciar Chefs</h3>
    <div class="chefs">
    {% for chef in chefs %}
        <div class="chef">
            <div style="background: url({{chef.avatar_url}}) center center / cover"></div>
            <div>
                <span>{{chef.name}}</span>
                <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
            </div>
        </div>
    {% endfor %}
    </div>
    <div class="createBtn">
        <a id="create" href="/admin/chefs/create"></a>
    </div>
{% endblock main %}